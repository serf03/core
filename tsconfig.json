{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx",
    ".next/types/**/*.ts",
    "components/Module/EditClientsDialog.jsx",
    "components/Module/EditProductDialog.jsx",
    "components/Module/InvoicePreviewDialog.jsx",
    "components/Module/StateInvoiceDialog.jsx",
    "components/Module/NewProductDialog.tsx",
    "components/Module/MainContent.jsx",
    "components/Screens/TabsUsuario.jsx",
    "components/Screens/TabsReport.jsx",
    "components/Screens/TabsProduction.tsx",
    "components/Screens/TabsFacturacion.tsx",
    "components/Screens/TabsDashboard.jsx",
    "components/Screens/TabsClients.jsx",
    "components/Module/InvoiceReceiptDialog.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}